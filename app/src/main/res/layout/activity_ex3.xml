<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ex3">

    <TextView
        android:id="@+id/centre"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/Hora1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/centre"
        app:layout_constraintCircleAngle="30"
        app:layout_constraintCircleRadius="100dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Hora2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/centre"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="100dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/Hora3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/centre"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="100dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/Hora4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/centre"
        app:layout_constraintCircleAngle="120"
        app:layout_constraintCircleRadius="100dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/Hora5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/centre"
        app:layout_constraintCircleAngle="150"
        app:layout_constraintCircleRadius="100dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/Hora6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/centre"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="100dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/Hora7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/centre"
        app:layout_constraintCircleAngle="210"
        app:layout_constraintCircleRadius="100dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/Hora8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/centre"
        app:layout_constraintCircleAngle="240"
        app:layout_constraintCircleRadius="100dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/Hora9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/centre"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="100dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/Hora10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/centre"
        app:layout_constraintCircleAngle="300"
        app:layout_constraintCircleRadius="100dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/Hora11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/centre"
        app:layout_constraintCircleAngle="330"
        app:layout_constraintCircleRadius="100dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/Hora12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textSize="12sp"
        app:layout_constraintCircle="@id/centre"
        app:layout_constraintCircleAngle="360"
        app:layout_constraintCircleRadius="100dp"
        tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>